<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="192.168.3.188" />

        <EditText
            android:id="@+id/port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8888" />

        <Button
            android:id="@+id/socketBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Use Socket"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/connectBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Connect Server"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/handle_close"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Disconnect Server"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/readInfo"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="#A4B5CF"
            android:layout_height="100dp"/>

        <Button
            android:id="@+id/readBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Read From Server"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/handle_up"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Up"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/handle_left"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Left"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/handle_right"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Right"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/handle_down"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Down"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/handle_enter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Enter"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/handle_esc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Esc"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>